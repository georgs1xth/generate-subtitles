script.

  const toggleDetails = () => {
    $('.downloadLinks, .fileDetails, #addSubtitles').slideToggle();
    setTimeout(() => $('#toggleDetails').text(`${$('.downloadLinks').is(':visible') ? 'Hide' : 'Show'} Text`), 500);
  };

  const copy = texts => {
    const cleanText = texts.map(el => el.trim());
    navigator.clipboard.writeText(cleanText.join('\t'));
  };

  const copyLink = copyBtn => {
    const [linkBtn] = $(copyBtn).siblings('a');
    copy([linkBtn.href]);
    copyBtn.textContent = 'Copied!';
    setTimeout(() => copyBtn.textContent = 'Copy', 2000);
  };